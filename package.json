{
	"name": "@careswitch/svelte-data-table",
	"description": "Small, fast data table library for Svelte 5 with client-side sorting, filtering, and pagination.",
	"version": "0.5.1",
	"homepage": "https://careswitch-svelte-data-table.vercel.app",
	"license": "MIT",
	"keywords": [
		"svelte",
		"sveltekit",
		"data",
		"table",
		"datatable",
		"grid",
		"sort",
		"filter",
		"paginate"
	],
	"repository": {
		"type": "git",
		"url": "git+https://github.com/careswitch/svelte-data-table.git"
	},
	"scripts": {
		"dev": "vite dev",
		"build": "vite build",
		"preview": "vite preview",
		"package": "svelte-kit sync && svelte-package && publint",
		"release": "changeset publish",
		"prepublishOnly": "npm run package",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"test": "vitest run",
		"lint": "prettier --check .",
		"format": "prettier --write ."
	},
	"exports": {
		".": {
			"types": "./dist/index.d.ts",
			"svelte": "./dist/index.js"
		}
	},
	"files": [
		"dist",
		"!dist/**/*.test.*",
		"!dist/**/*.spec.*",
		"!dist/components/**",
		"!dist/utils.*"
	],
	"peerDependencies": {
		"svelte": "^5.0.0-next.1"
	},
	"devDependencies": {
		"@changesets/cli": "^2.27.7",
		"@faker-js/faker": "^8.4.1",
		"@sveltejs/adapter-vercel": "^5.0.0",
		"@sveltejs/kit": "^2.0.0",
		"@sveltejs/package": "^2.0.0",
		"@sveltejs/vite-plugin-svelte": "^3.0.0",
		"bits-ui": "^0.21.12",
		"clsx": "^2.1.1",
		"postcss": "^8.4.38",
		"prettier": "^3.1.1",
		"prettier-plugin-svelte": "^3.1.2",
		"prettier-plugin-tailwindcss": "^0.6.4",
		"publint": "^0.2.0",
		"svelte": "^5.0.0-next.1",
		"svelte-check": "^3.6.0",
		"svelte-radix": "^1.1.0",
		"tailwind-merge": "^2.4.0",
		"tailwind-variants": "^0.2.1",
		"tailwindcss": "^3.4.4",
		"tslib": "^2.4.1",
		"typescript": "^5.0.0",
		"vite": "^5.0.11",
		"vitest": "^2.0.0"
	},
	"svelte": "./dist/index.js",
	"types": "./dist/index.d.ts",
	"type": "module"
}
